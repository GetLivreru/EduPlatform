{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EduPlatformS3Access",
            "Effect": "Allow",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:CreateBucket",
                "s3:GetBucketLocation",
                "s3:ListAllMyBuckets"
            ],
            "Resource": [
                "arn:aws:s3:::eduplatfrom",
                "arn:aws:s3:::eduplatfrom/*"
            ]
        }
    ]
} 